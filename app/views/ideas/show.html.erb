        <div class="idea card border-0">
          <div class="card-body">
            <h5 class="card-title"><%= @idea.title %></h5>
            <div class="card-text">
              <%= @idea.description %><br>
              <small class="text-muted">Posted <%= time_ago_in_words(@idea.updated_at) %> ago</small>
            </div>
            <%= link_to "Edit", edit_idea_path(@idea), class: "btn btn-outline-primary btn-md" %>
            <%= link_to "Delete", idea_path(@idea), data: { turbo_method: :delete }, class: "btn btn-outline-primary btn-md" %>
          </div>
        </div>
