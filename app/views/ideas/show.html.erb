        <div class="idea card border-0">
          <div class="card-body">
            <h5 class="card-title"><%= @idea.title %></h5>
            <div class="card-text">
              <%= @idea.description %><br>
              <small class="text-muted">By <%= @idea.user&.full_name || "DELETED" %> | 
              Posted <%= time_ago_in_words(@idea.updated_at) %> ago</small>
            </div>
            <% if can? :edit, @idea %>
              <%= button_to "Edit", edit_idea_path(@idea), method: :get, class: "btn btn-outline-primary btn-md" %>
            <% end %>
            <% if can? :destroy, @idea %>
              <%= button_to "Delete", idea_path(@idea), method: :delete, class: "btn btn-outline-primary btn-md" %>
            <% end %>
          </div>
        </div>
