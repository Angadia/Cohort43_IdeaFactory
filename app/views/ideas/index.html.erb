      <%= tag.ideas class: %w( ideas card-deck ) do %>
        <% @ideas.each do |idea| %>
          <div class="card">
            <div class="card-body">
              <div class="card-title">
                <h5><%= link_to idea.title, idea_path(idea) %></h5>
              </div>
              <div class="card-text">
                <%= idea.description %><br>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
